#include<iostream>
using namespace std;
int main() {
	int T;
	cin>>T;
	while(T--){
	    int n, a, b, count=0;
	    cin>>n;
	    for(int i=1;i<=n;i++)
	    {
	        cin>>a>>b;
	        if(abs(a-b)>5) //abs()-> gives +ve valude i.e. mod of (a-b)
	        count++;
	        else
	        count;
	    }
	    cout<<count<<endl;
	    count=0;
	}
	return 0;
}
