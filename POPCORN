#include<iostream>
using namespace std;
int main() {
	int T;
	cin>>T;
	while(T--){
	    int a1,a2,b1,b2,c1,c2,s1=0,s2=0,s3=0;
	    cin>>a1>>a2;
	    s1=a1+a2;
	    cin>>b1>>b2;
	    s2=b1+b2;
	    cin>>c1>>c2;
	    s3=c1+c2;
	    if(s1>=s2 && s1>=s3) cout<<s1<<endl;
	    else if(s2>=s1 && s2>=s3) cout<<s2<<endl;
	    else cout<<s3<<endl;
	}
	return 0;
}
