#include<iostream>
using namespace std;
int main() {
    int q;
    cin>>q;
    while(q--){
        int a,b;
        cin>>a>>b;
        if(a<b)
        {
            int temp=a;
            a=b;
            b=temp;
        }
        if(a-b==2) cout<<"YES"<<endl;
        else
        if(a-b==1 && b%2==1) cout<<"YES"<<endl;
        else cout<<"NO"<<endl;
    }
	return 0;
}
