#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	while(T--){
	    int a, b, c, d;
	    cin>>a>>b>>c;
	    if(a<=b && a<=c)
	    {
	        d=(b+c);
	        cout<<d<<endl;
	    }
	    else if(b<=a && b<=c)
	    {
	        d=(a+c);
	        cout<<d<<endl;
	    }
	    else
	    {
	        d=(a+b);
	        cout<<d<<endl;
	    }
	}
	
	return 0;
}
